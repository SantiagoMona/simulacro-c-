<figure class="text-center">
  <blockquote class="blockquote">
    <p>Listado De Usuarios.</p>
  </blockquote>
  <figcaption class="blockquote-footer">
    Code in <cite title="Source Title">Simulaco.</cite>
  </figcaption>
</figure>

<form asp-controller="Users" asp-action="Index">

  <p>
    buscar:<input type="text" name="buscar" class="form-text"/>
    <input type="submit" value="buscar" class="btn btn-sm btn-dark"> 
  </p>

</form>

<div class="d-grid gap-2 col-6 mx-auto">
  <a class="btn btn-success" asp-action="Create" asp-controller="Users">Crear Nuevo Usuario</a>
</div>

<table class="table table-striped">
    <thead>
        <th># id</th>
        <th>Nombre</th>
        <th>Apellido</th>
        <th>Correo</th>
        <th>Cumplea√±os</th>
        <th>Acciones</th>
    </thead>
    @foreach (var item in Model){
        <tr>
            <td>@item.Id</td>
            <td>@item.Name</td>
            <td>@item.LastName</td>
            <td>@item.Email</td>
            <td>@item.BrithDate</td>
            <td> 
                <a class="btn btn-info" asp-action="Edit" asp-controller="Users" asp-route-id="@item.Id">Editar</a>
                <a class="btn btn-warning" asp-action="Details" asp-controller="Users" asp-route-id="@item.Id">Ver Detalles</a>
                <a class="btn btn-danger" asp-action="Delete" asp-controller="Users" asp-route-id="@item.Id" method="post">Eliminar</a>

            </td>
        </tr>
    }
</table>